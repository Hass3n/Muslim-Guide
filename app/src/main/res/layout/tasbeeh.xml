<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/back"
    android:orientation="vertical">

    <Button
        android:id="@+id/bAdd"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_above="@+id/relativeLayout8"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_bg_2"
        android:gravity="center"
        android:text="@string/Tap_Here_To_Sart"
        android:textColor="@color/colorSecondery"
        android:textSize="18dp" />

    <RelativeLayout
        android:id="@+id/relativeLayout7"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_above="@+id/bAdd"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/tasbeh"
            android:tint="@color/colorSecondery"/>

        <TextView
            android:id="@+id/tvDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/colorSecondery"
            android:textSize="40dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout8"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_above="@+id/adView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">

        <Button
            android:id="@+id/ivresettasbeeh"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/btn_bg_1"
            android:drawableRight="@drawable/ic_clear_all_black_24dp"
            android:drawableTint="@color/colorSecondery"
            android:paddingRight="20dp"
            android:text="افراغ"
            android:textColor="@color/colorSecondery"
            />

        <Button
            android:id="@+id/ivsavetasbeeh"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivresettasbeeh"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="11dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="60dp"
            android:layout_toEndOf="@+id/ivresettasbeeh"
            android:background="@drawable/btn_bg_1"
            android:drawableRight="@drawable/ic_save_black_24dp"
            android:drawableTint="@color/colorSecondery"
            android:paddingRight="20dp"
            android:text="حفظ"
            android:textColor="@color/colorSecondery" />

    </RelativeLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id" />

</RelativeLayout>