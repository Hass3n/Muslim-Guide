<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="test.demo.Ramadan.MainActivity">

    <TextView
        android:id="@+id/idTvTimeHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:text="Home"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorSecondery"
        android:textIsSelectable="true"
        android:textSize="30dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/idTvDateHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idTvTimeHome"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:text="Time"
        android:textColor="@color/colorSecondery"
        />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/adView"
        android:layout_below="@+id/idTvDateHome"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/rl6kalma"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="false"
                android:layout_alignParentLeft="false">

                <ImageView
                    android:id="@+id/iv6kalma"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:clickable="true"
                    android:onClick="Clicker"
                    android:src="@drawable/kalmaicon"
                    android:tint="@color/colorSecondery"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_above="@+id/relativeLayout"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/ivramadantiming"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:clickable="true"
                    android:onClick="Clicker"
                    android:src="@drawable/ramadantimeicon"
                    android:tint="@color/colorSecondery"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_above="@+id/relativeLayout"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/ivtasbeeh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:clickable="true"
                    android:onClick="Clicker"
                    android:src="@drawable/tasbeehicon"
                    android:tint="@color/colorSecondery"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/rl6kalma"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="33dp">

                <ImageView
                    android:id="@+id/ivduas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:clickable="true"
                    android:onClick="Clicker"
                    android:src="@drawable/duaicon"
                    android:tint="@color/colorSecondery"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignTop="@+id/relativeLayout"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/ivqibladirction"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:clickable="true"
                    android:onClick="Clicker"
                    android:src="@drawable/qiblaicon"
                    android:tint="@color/colorSecondery"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignBottom="@+id/relativeLayout2"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/ivprayertiming"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:clickable="true"
                    android:onClick="Clicker"
                    android:src="@drawable/prayertimeicon"
                    android:tint="@color/colorSecondery"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout4"
                android:layout_width="100dp"

                android:layout_height="100dp"
                android:layout_below="@+id/relativeLayout"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="33dp"
                android:layout_marginBottom="200dp">


                <ImageView
                    android:id="@+id/ivlearnquran"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:onClick="Clicker"
                    android:src="@drawable/learnquranicon"
                    android:tint="@color/colorSecondery"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignBottom="@+id/relativeLayout4"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/ivmosquenearby"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:clickable="true"
                    android:onClick="Clicker"
                    android:src="@drawable/mosque"
                    android:tint="@color/colorSecondery"/>
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>


    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id" />

</RelativeLayout>
