<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#FF1F2466"
                android:endColor="#FF1F2466"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#FF1F2466" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#FF1F2466"
                android:startColor="#FF1F2466"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#FF1F2466" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#d5ab5a"
                android:startColor="#d5ab5a"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#d5ab5a" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>

